{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rulesDirectory": ["tslint-consistent-codestyle"],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "jsx-double"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "object-literal-sort-keys": false,
        "variable-name": [false, "ban-keywords", "check-format", "allow-leading-underscore"],
        "no-console": true,
        "max-line-length": [true, 200],
        "max-classes-per-file": [true, 2],
        "whitespace": [true, "check-module"],
        "no-trailing-whitespace": false,
        "no-namespace": false,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "strict": false,
        "triple-equals": true,
        "curly": true,
        "no-eval": true,
        "prefer-object-spread": true,
        "no-return-await": true,
        "no-string-literal": true,
        "no-unused-expression": [true, "allow-new"],
        "no-empty-interface": true,
        "use-isnan": true,
        "array-type": [true, "array"],
        "arrow-return-shorthand": true,
        "class-name": true,
        "no-angle-bracket-type-assertion": true,
        "no-unnecessary-callback-wrapper": true,
        "prefer-switch": [true, {"min-cases": 4}],
        "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
        "member-ordering": [true, {"order": "fields-first"}],
        "no-shadowed-variable": false,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "interface-over-type-literal": false,
        "interface-name": false,
        "ordered-imports": [true, {"import-sources-order": "lowercase-last", "named-imports-order": "lowercase-first"}],
        "prefer-const-enum": true,
        "naming-convention": [
            true,
            {"type": "variable", "modifiers": ["global", "const"], "filter": "(i|I)d$", "format": ["UPPER_CASE"], "final": true},
            {"type": "enum", "format": "StrictPascalCase"},
            {"type": "enumMember", "format": "StrictPascalCase"}
        ],
        "no-var-requires": false,

        "jsx-self-close": true,
        "jsx-space-before-trailing-slash": false,
        "jsx-wrap-multiline": true,
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": true,
        "jsx-no-bind": true,
        "jsx-curly-spacing": [true, "always"],
        "jsx-boolean-value": [true, "never"],
        "jsx-alignment": true
    }
}
